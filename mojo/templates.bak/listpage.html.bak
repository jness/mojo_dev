{% include 'header.html' %}

<tr valign='top'>
<td>
    <!-- start package list -->
    <table width='100%'>
    
    <tr>    
      {% if page in 'build|task' %}
        <td><b>Label</b></td>
        <td><b>Built By</b></td>
        <td><b>Tags</b></td>
        <td align='right'><b>Created</b></td>
      {% else %}
	{% if page == 'tag' %}
          <td width='25%'><b>Label</b></td>
          <td><b>Detail</b></td>
          <td><b>Builds</b></td>
	{% else %}
          <td width='25%'><b>Label</b></td>
          <td><b>Detail</b></td>
        {% endif %}
      {% endif %}
    </tr>
    
    {% for r in results %}
	<tr bgcolor={% cycle "#F0F0F0" "#F8F8F8" %}
	onmouseover="style.backgroundColor='#b6c5cd';"
        onmouseout="style.backgroundColor='{% cycle "#F0F0F0" "#F8F8F8" %}';">
	 
	<td><a href="{{ url }}{{ page }}info/{{ r.label }}?project={{ project }}"><font color='
	   {% if r.status_label == 'BuildSuccess' %}
	       #00CC00
	   {% else  %}
	       {% if r.status_label == 'BuildFail' %}
	       red
	       {% endif %}
	   {% endif %}
	'>{{ r.label }}</font></a></td>
	
	  {% if page in 'build|task' %}
	    <td><a href="{{ url }}userinfo/{{ r.user_label }}?project={{ project }}">{{ r.user_label }}</a></td>
	    <td>{% for tag in r.tags %}<a href="{{ url }}taginfo/{{ tag }}?project={{ project }}">{{ tag }}</a> {% endfor %}</td>
	    <td align='right'><font color='grey'>{{ r.create_date }}</font></td>
	  {% else %}
	    {% if page == 'package' %}
 	      <td>{{ r.summary }}</td>
	    {% else %}
		{% if page == 'system' %}
 		    <td>{{ r.hostname }}</td>
		   {% else %}
		      {% if page == 'tag' %}
			<td>{{ r.project_label }}</td>
			<td>{{ r.builds|length }}</td>
		      {% else %}
		        <td>{{ r.display_name }}</td>
		   {% endif %}
		{% endif %}
	    {% endif %}
	  {% endif %}
	</tr>
    {% endfor %}
    </table>
</td>
{% include 'footer.html' %}
